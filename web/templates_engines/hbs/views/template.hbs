<html>
    <head>
        <title>{{ titulo }}</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css">
    </head>
    <body>
        <div class="container">
            <h1>{{mensaje}}</h1>

            <table class="table table-stripped">
                {{#each personas}}
                    <tr>
                        <td>{{ this.id }}</td>
                        <td><a href="/persona/{{this.id}}"></a></td>
                    </tr>
                {{/each}}
            </table>
        </div>
    </body>
</html>